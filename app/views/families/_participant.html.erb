<hr />
<% fields_for_participant(participant) do |participant_form| -%>
    <table>
      <tr>
        <td>
          <%= participant_form.radio_button :main_contact, 'true' %>
          <%= participant_form.label "Click if this person is the main contact for this family." -%>
        </td>
      </tr>
      <tr><td>
        <table>
          <tr>
            <td class="field">
              <%= participant_form.text_field :firstname, :size => 40 -%><br /><%= participant_form.label "First Name" -%>
            </td>
            <td class="field">
              <%= participant_form.text_field :lastname, :size => 45 -%><br /><%= participant_form.label "Last Name" -%>
            </td>
            <td class="field">
              <%= participant_form.text_field :birthdate, :size => 20 -%><br /><%= participant_form.label "Birthdate (MM/DD/YYYY)" -%>
            </td>
            <td class="field">
              <%= participant_form.text_field :gender, :size => 10 -%><br /><%= participant_form.label "Gender (M/F)" -%>
            </td>
          </tr>
        </table>
      </td></tr>
      <tr><td>
        <table>
          <tr>
            <td class="field">
              <%= participant_form.text_field :address1, :size => 40 -%><br /><%= participant_form.label "Address" -%>
            </td>
            <td class="field">
              <%= participant_form.text_field :city, :size => 20 -%><br /><%= participant_form.label "City" -%>              
            </td>
            <td class="field">
              <%= participant_form.text_field :state, :size => 5 -%><br /><%= participant_form.label "State" -%>
            </td>
            <td class="field">
              <%= participant_form.text_field :zip, :size => 10 -%><br /><%= participant_form.label "Zip" -%>              
            </td>
            <td class="field">
              <%= participant_form.text_field :homechurch, :size => 35 -%><br /><%= participant_form.label "Home Church" -%>              
            </td>
          </tr>
        </table>
      </td></tr>
      <tr><td>
        <table>
          <tr>
            <td class="field">
              <%= participant_form.text_field :phone -%><br /><%= participant_form.label "Home Phone" -%>
            </td>
            <td class="field">
              <%= participant_form.text_field :mobile -%><br /><%= participant_form.label "Cell Phone" -%>
            </td>
            <td class="field">
              <%= participant_form.text_field :email, :size => 60 -%><br /><%= participant_form.label "Email" -%>
            </td>
          </tr>
        </table>
      </td></tr>
      <tr><td>
        <table>
          <tr>
            <td class="field">
              <%= participant_form.text_field :occupation -%><br /><%= participant_form.label "Occupation" -%>
            </td>
            <td class="field">
              <%= participant_form.text_field :employer -%><br /><%= participant_form.label "Employer" -%>
            </td>
            <td class="field">
              <%= participant_form.text_field :school -%><br /><%= participant_form.label "School Name" -%>
            </td>
            <td class="field">
              <%= participant_form.text_field :grade -%><br /><%= participant_form.label "Grade Level" -%>              
            </td>
          </tr>
        </table>
      </td></tr>
    </table>
