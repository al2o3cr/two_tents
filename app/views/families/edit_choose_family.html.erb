<% form_tag(url_for(:action => :update_add_participant)) do %>

  <%= hidden_field_tag "participant_id", @participant.id %>
  <% @families.each do |f| %>
    <br />
    <%= radio_button("family", "id", "#{f.id}") %>
    <%= "#{f.familyname}" %>
  <% end %>
  <br />
  <%= submit_tag "OK" %>
<% end %>